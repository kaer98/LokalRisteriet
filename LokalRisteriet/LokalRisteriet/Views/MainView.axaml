<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:material="using:Material.Icons.Avalonia"
             xmlns:viewModels="clr-namespace:LokalRisteriet.ViewModels"
             mc:Ignorable="d" d:DesignWidth="810" d:DesignHeight="480"
             x:Class="LokalRisteriet.Views.MainView"
			 >

    <Grid  RowDefinitions="*" >
	    <Grid.Background>
		    <LinearGradientBrush  >
			    <GradientStop Color="#e1e5ea"/> 

			    <GradientStop Color="#a1a5a9" Offset="1.0"/>

		    </LinearGradientBrush>    
	    </Grid.Background>

	
	    <!--Middle (Main) Bar-->
        <Grid Grid.Row="0" Background="#f6f6f6" Grid.RowDefinitions="*,50">

			<Grid.Styles>
				<Style Selector="Calendar:checked">
					<Setter Property="Background" Value="Red"></Setter>
				</Style>
			</Grid.Styles>


			<Grid Grid.Row="0" ColumnDefinitions="Auto,*,*">
				<Calendar Name="_calcal" Background="#e1e5ea" CornerRadius="20,20,0,0" BorderBrush="#b3b3b3"  Grid.Column="0" Margin="10,10,0,0" HorizontalAlignment="Center"  Height="400"  VerticalAlignment="Center" SelectionMode="MultipleRange">
					
				</Calendar>

				<ListBox Grid.Column="1"  SelectionChanged="BookingList_OnSelectionChanged" x:Name="bookingList" SelectedItem="{Binding SelectedBooking}"  Items="{Binding Bookings}" BorderBrush="#b3b3b3" BorderThickness="1.60"  Margin="20,10,20,10" CornerRadius="20" >
                <ListBox.Background>
	                <LinearGradientBrush  >
		                <GradientStop Color="#e1e5ea"/> 

		                <GradientStop Color="#a1a5a9" Offset="1.0"/>

	                </LinearGradientBrush>    
                </ListBox.Background>
				
					<ListBox.ItemTemplate>
					
                    <DataTemplate>
						

						<Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,*">
							<Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,*">

						</Grid>
							<StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal">
								<material:MaterialIcon Kind="Calendar" Foreground="Black" />
								<Label  Content="{Binding BookingType}" Foreground="Black" ></Label>
								<Label  Content="af" Foreground="Black" ></Label>
							</StackPanel>
							

							<Label Grid.Column="1" Grid.Row="1" Content="{Binding Customer.CustomerName}" Foreground="Black"></Label>
						</Grid>

                       
                    </DataTemplate>
                </ListBox.ItemTemplate>


                       
             

            </ListBox>

				<Grid Grid.Column="2" RowDefinitions="260,*" >

			
					<Border Grid.Row="0" BorderThickness="1.60" Background="#e1e5ea" CornerRadius="20" BorderBrush="#b3b3b3" VerticalAlignment="Top" Margin="10" >
				<Grid  ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" VerticalAlignment="Center"  >

					
					<!--Navn-->

					<Label Grid.Column="0" Grid.Row="0">Navn</Label>
					<Label Name="lblName" Grid.Column="1" Grid.Row="0" Content="{Binding SelectedBooking.Customer.CustomerName}" ></Label>

					<!--E-Mail-->
					<Label Grid.Column="0" Grid.Row="1">Email</Label>
					<Label Name="lblEmail" Grid.Column="1" Grid.Row="1" Content="{Binding SelectedBooking.Customer.CustomerEmail}">mail@gmail.com</Label>

					<!--Vælg Dato-->
					<Label Grid.Column="0" Grid.Row="9" >Dato </Label>
					<Label Name="lbldate" Grid.Column="1" Grid.Row="9" Content="{Binding SelectedBooking.BookingStart}"></Label>


					<!--Vælg Start Tidspunkt-->
					<Label Grid.Column="0" Grid.Row="3">Start Tidspunkt </Label>
					<Label Name="lblstart" Grid.Column="1" Grid.Row="3" Content="{Binding SelectedBooking.BookingStart}" ></Label>

					<!--Vælg Slut Tidspunkt-->
					<Label Grid.Column="0" Grid.Row="4">Slut Tidspunkt </Label>
					<Label Name="lblend" Grid.Column="1" Grid.Row="4" Content="{Binding SelectedBooking.BookingEnd}" ></Label>


					<!--Vælg Ekstra Personale-->
					<Label Grid.Column="0" Grid.Row="5">Personale Over 18</Label>
					<Label Name="lbl18" Grid.Column="1" Grid.Row="5" Content="{Binding	SelectedBooking.EmployeesAdult}" ></Label>
					
					<!--Vælg Under Personale-->
					<Label Grid.Column="0" Grid.Row="6">Personale Under 18</Label>
					<Label Name="lbl17" Grid.Column="1" Grid.Row="6" Content="{Binding	SelectedBooking.EmployeesChild}"  ></Label>


					<!--Event Type - Skal være en drop down menu-->
					<Label Grid.Column="0" Grid.Row="7">Event Type</Label>
					<Label Name="lblType" Grid.Column="1" Grid.Row="7"  Content="{Binding SelectedBooking.BookingType}" ></Label>

					<!--Antal Gæster-->
					<Label Grid.Column="0" Grid.Row="8">Antal Gæster</Label>
					<Label Name="lblguest" Grid.Column="1" Grid.Row="8"  Content="{Binding SelectedBooking.BookingAmountOfGuests}" ></Label>



					<!--Telefonnumer-->
					<Label Grid.Column="0" Grid.Row="2">Telefon</Label>
					<Label Name="lblPhone" Grid.Column="1" Grid.Row="2" Content="{Binding SelectedBooking.Customer.CustomerPhoneNo}"  ></Label>


				</Grid>
				</Border>

					<Border Margin="10" Grid.Column="2" Grid.Row="1" BorderThickness="1.60"  Background="#e1e5ea" CornerRadius="20" BorderBrush="#b3b3b3" >
						<StackPanel>
							<Label>Noter:</Label>
						<Label   VerticalAlignment="Top"  HorizontalAlignment="Left"  >
							
							<TextBlock TextWrapping="Wrap" Text="{Binding SelectedBooking.BookingNote}"></TextBlock>
						</Label>
						</StackPanel>
							</Border>
				</Grid>
			</Grid>
				



			
