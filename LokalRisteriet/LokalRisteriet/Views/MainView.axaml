            <Grid Grid.Row="1" RowDefinitions="*" VerticalAlignment="Top" >
            <StackPanel Grid.Row="0" VerticalAlignment="Top" Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center" Margin="50,10,50,0" >
                <Button Click="Booking_Button2" >Se Booking</Button>
                <Button Click="AddBookingButton">Tilføj Booking</Button>
                <Button Click="EditBookingButton">Rediger Booking</Button>
</StackPanel>
				
                
            </Grid>
        </Grid>
         

</Grid>





        

      





</UserControl>
