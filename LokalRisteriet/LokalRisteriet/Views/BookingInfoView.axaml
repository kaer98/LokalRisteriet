<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LokalRisteriet.Views.BookingInfoView">




<Grid Background="#f6f6f6" RowDefinitions="*,*">


	<Grid Grid.Row="0" ColumnDefinitions="*,*" RowDefinitions="30,*"   >


        <Label Grid.Row="0" Grid.Column="0" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Bottom">Liste over Produkter til bookingen</Label>
        <Label Grid.Row="0" Grid.Column="1" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Bottom">Liste over Services til bookingen</Label>

		<ListBox Grid.Column="0" Grid.Row="1" Background="#e1e5ea"  Margin="10,10" BorderBrush="Black" BorderThickness="2" CornerRadius="20"></ListBox>
        <ListBox Grid.Column="1" Grid.Row="1" Background="#e1e5ea" Margin="10,10" BorderBrush="Black" BorderThickness="2" CornerRadius="20"></ListBox>

	</Grid>
	<StackPanel Grid.Row="1" Margin="10,0,0,0" Spacing="5" Orientation="Horizontal" VerticalAlignment="Top">
    <Button  Margin="0,0,0,0" >Tilføj produkter</Button>
        <Button  Margin="0,0,0,0" >Tilføj Tasks</Button>
        <Label x:Name="Lbl1"></Label>

	</StackPanel>

</Grid>

</UserControl>
